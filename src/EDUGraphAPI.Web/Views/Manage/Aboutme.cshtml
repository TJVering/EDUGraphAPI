@model AboutMeViewModel
@{
    ViewBag.Title = "About Me";
}
<div class="container ">
<h2>                
    About Me
</h2>

    <div class="margin-top-12 margin-btm-12">
        <b>Username:</b><br /> @User.Identity.GetFullName()
    </div>
    <div class="margin-btm-12">
        <b>Favorite Color:</b> 
        @using (Html.BeginForm("Aboutme", "Manage"))
        {
            @ColorsDropdown(Model.MyFavoriteColor, Model.FavoriteColors)
            <input type="submit"  value="Save"/>
        }
    </div>
    <div class="margin-btm-12 ">
        <b>Classes:</b> 
        <br />
        <div >
            @foreach (var item in Model.Groups)
            {
                @item <br />
            }
        </div>
    </div>
</div>
@helper ColorsDropdown(string myFavoriteColor, List<string> favoriteColors)
{
    <select name="favoritecolor">
        @foreach (string color in favoriteColors)
        {
            string selected = myFavoriteColor == color ? "selected" : "";
            <option value="@color" @selected>@color</option>
        }
    </select>
}